<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentViewTasks">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just Think How To Do it !"
            android:textSize="20dp"
            android:shadowColor="#877F7F"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textStyle="bold"

            android:textColor="#362621"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample name"

            android:textColor="#362621"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/userNameTv" />

    </LinearLayout>

        <SearchView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:queryHint="Enter Task Name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:iconifiedByDefault="false"
            android:background="@drawable/search_view_border"
            android:id="@+id/searchview"
            android:backgroundTint="#EDFFFCF1"
            android:outlineAmbientShadowColor="@color/pinkdark"
         android:backgroundTintMode="src_over"
            />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="160dp"
android:backgroundTint="#6170C6"
    android:layout_marginTop="20dp"
android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/activity"
    >
    <!-- achievement_circle.xml -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/Support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try to complete more tasks."
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"

             />

        <TextView
            android:id="@+id/completionPercentageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@android:color/white"

            android:visibility="gone" />



    </LinearLayout>


</androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Progress tracking"
                    android:textColor="#362621"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/lightpink"
                                android:backgroundTint="@color/lightpink"
                                android:background="@color/lightpink"
                              android:layout_marginLeft="170dp"
                                app:fabSize="mini"

                              android:src="@drawable/baseline_add_24"
                                android:id="@+id/addTaskkFAB"

                                />

            </LinearLayout>
        <ListView
            android:layout_marginTop="8dp"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>














</androidx.coordinatorlayout.widget.CoordinatorLayout>
