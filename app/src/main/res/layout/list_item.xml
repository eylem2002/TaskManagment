<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:elevation="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:background="@color/pinkdark"
                >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="23"
    android:layout_gravity="center"
    android:textSize="30dp"
    android:textColor="@color/white"
    android:id="@+id/timeofcreate"
    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:20 -13:00"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:id="@+id/timetodone"
                    />

                <TextView
                  android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textSize="10dp"
                    android:id="@+id/taskStatusTv"
                    />
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go with frineds"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/taskname"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go out with frineds to mall on monday mera and soz"
                    android:textSize="15dp"

                    android:textColor="@color/black"
                    android:id="@+id/taskdes"

                    />
            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>




</LinearLayout>